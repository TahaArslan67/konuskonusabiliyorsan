# Server
PORT=8080
NODE_ENV=development

# CORS (virgülle ayırarak birden fazla origin girebilirsiniz)
ALLOWED_ORIGINS=http://localhost:3000,capacitor://localhost,http://localhost,https://konuskonuşabilirsen.com,https://www.konuskonuşabilirsen.com

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# OpenAI (sunucuda saklayın, istemciye göndermeyin)
OPENAI_API_KEY=
# Realtime modeli (ileride güncelleyebiliriz)
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview

# Azure OpenAI Realtime (opsiyonel: doldurursanız otomatik Azure kullanılır)
# Örnek endpoint: https://hemenkonus-resource.cognitiveservices.azure.com
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2024-10-01-preview
# Azure tarafında dağıtım adı (deployment)
AZURE_OPENAI_DEPLOYMENT=gpt-realtime

# Stripe (abonelik için – ileride bağlanacak)
# STRIPE_SECRET_KEY=sk_live_or_test_...
# STRIPE_PRICE_ID=price_...
# STRIPE_WEBHOOK_SECRET=whsec_...
